---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "SnapFitLabs - 3D Printing, Industrial Design, and Fusion360 Plugins"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="fixed top-4 left-1/2 transform -translate-x-1/2 w-11/12 max-w-7xl z-50">
      <nav class="bg-white bg-opacity-30 backdrop-blur-md border border-gray-200 rounded-full shadow-lg px-6 py-3 flex items-center justify-between">
        <a href="/" class="text-2xl font-bold text-gray-900">
          SnapFitLabs
        </a>
        <div class="flex gap-6">
          <a href="/blog" class="text-gray-600 hover:text-yellow-400">Blog</a>
          <a href="/products" class="text-gray-600 hover:text-yellow-400">Products</a>
          <a href="/about" class="text-gray-600 hover:text-yellow-400">About</a>
        </div>
      </nav>
    </header>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-20">
      <slot />
    </main>
    <footer class="bg-gray-900 text-gray-100 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-yellow-400 font-bold text-lg mb-4">SnapFitLabs</h3>
            <p class="text-gray-300">
              Exploring the intersection of 3D printing and industrial design.
            </p>
          </div>
          <div>
            <h3 class="text-yellow-400 font-bold text-lg mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/blog" class="hover:text-yellow-400">Blog</a></li>
              <li><a href="/products" class="hover:text-yellow-400">Products</a></li>
              <li><a href="/about" class="hover:text-yellow-400">About</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-yellow-400 font-bold text-lg mb-4">Connect</h3>
            <ul class="space-y-2">
              <li><a href="#" class="hover:text-yellow-400">Twitter</a></li>
              <li><a href="#" class="hover:text-yellow-400">Instagram</a></li>
              <li><a href="#" class="hover:text-yellow-400">YouTube</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
          Â© {new Date().getFullYear()} SnapFitLabs. All rights reserved.
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
