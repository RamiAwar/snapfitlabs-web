---
import Layout from '../../layouts/Layout.astro';

const posts = [
  { title: 'Post 1', url: '/blog/post1' },
  { title: 'Post 2', url: '/blog/post2' },
];

---

<Layout title="Blog">
  <h1 class="text-4xl font-bold mb-8">Blog</h1>
  <ul class="space-y-4">
    {posts.map((post) => (
      <li>
        <a href={post.url} class="text-2xl text-blue-600 hover:underline">
          {post.title}
        </a>
      </li>
    ))}
  </ul>
</Layout>

<style>
  body {
    font-family: 'Inter', 'Poppins', 'Montserrat', sans-serif;
  }

  h1 {
    font-weight: 700;
  }

  p {
    font-weight: 300;
  }

  a {
    font-weight: 700;
  }

  .shadow-lg {
    box-shadow: 8px 8px 16px rgba(0, 0, 0, 0.2), -8px -8px 16px rgba(255, 255, 255, 0.7);
  }

  .rounded-lg {
    border-radius: 12px;
  }
</style>
