---
import Layout from '../layouts/Layout.astro';
import product1 from '../assets/product1.png';
---

<Layout title="SnapFitLabs - 3D Printing & Industrial Design">
  <div class="relative overflow-hidden">
    <section class="min-h-screen relative flex items-center">
      <!-- Parallax product image -->
      <div class="absolute inset-0 z-0">
        <img 
          src={product1.src} 
          alt="Featured Product" 
          class="absolute w-1/2 max-w-2xl right-0 top-1/2 -translate-y-1/2 object-contain parallax-image"
          id="parallaxProduct"
        />
      </div>

      <!-- Content -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <div class="text-center md:text-left md:max-w-2xl">
          <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-8">
            Welcome to <span class="text-yellow-400">SnapFitLabs</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mb-12">
            Exploring the intersection of 3D printing and industrial design. 
            Discover our Fusion360 plugins and custom designs.
          </p>
          <div class="flex justify-center md:justify-start gap-6">
            <a href="/products" class="bg-yellow-400 text-gray-900 px-8 py-4 rounded-lg font-semibold hover:bg-yellow-500 transition-colors">
              View Products
            </a>
            <a href="/blog" class="bg-gray-900 text-white px-8 py-4 rounded-lg font-semibold hover:bg-gray-800 transition-colors">
              Read Blog
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <section class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12">Featured Products</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[1, 2, 3].map((i) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-transform hover:-translate-y-2">
            <div class="aspect-w-1 aspect-h-1 bg-gray-100"></div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Coming Soon</h3>
              <p class="text-gray-600">Product showcase coming soon...</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12">Latest Blog Posts</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {[1, 2].map((i) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-transform hover:-translate-y-2">
            <div class="aspect-w-16 aspect-h-9 bg-gray-100"></div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Coming Soon</h3>
              <p class="text-gray-600">Blog posts coming soon...</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<script>
  let ticking = false;
  let lastScrollY = window.scrollY;
  
  function updateParallax() {
    const image = document.getElementById('parallaxProduct');
    if (!image) return;
    
    const scrolled = window.scrollY;
    const speed = 0.5;
    const yPos = (scrolled - lastScrollY) * speed;
    
    const currentTransform = new WebKitCSSMatrix(window.getComputedStyle(image).transform);
    const currentY = currentTransform.m42;
    
    image.style.transform = `translate3d(0, ${currentY + yPos}px, 0)`;
    
    lastScrollY = scrolled;
    ticking = false;
  }

  document.addEventListener('astro:page-load', () => {
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateParallax();
        });
        ticking = true;
      }
    });
  });
</script>

<style>
  .parallax-image {
    will-change: transform;
  }
</style>